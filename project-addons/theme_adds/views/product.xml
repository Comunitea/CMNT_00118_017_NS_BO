        <xpath expr="//ol[@class='breadcrumb clarico_breadcrumb']/li[1]" position="replace">
            <a class="home-icon" href="/shop">
                <i class="fa fa-home" aria-hidden="true"></i>
            </a>
            <!--<span class="select-nevigation-span">/</span>
            <li>
                <a href="/shop">All products</a>
            </li>-->
            <li t-if="product.public_categ_ids">
                 <t t-set="inc" t-value="0"/>
                 <t t-foreach="product.public_categ_ids" t-as="category">
                     <!--<t t-if="inc==0"><a t-esc="category.name" t-att-href="keep(slug(category))"/></t>
                     <t t-set="inc" t-value="inc+1"/>-->
                 </t>
             </li>
            <li t-else="" >
                <a href="/shop">All products</a>
            </li>
        </xpath>
    </template>

