    <!-- stars insert -->
    <!--<template id="star_rating_mini_product_replace" inherit_id="clarico_rating.clarico_rating_shop_product_rating_products_item">
        <xpath expr="//t[@t-set='rating_stat']" position="replace"/>
    </template>-->
    <template id="star_rating_mini_product_insert" inherit_id="clarico_shop.clarico_shop_products_item">
        <xpath expr="//div[@class='itemscope-main']" position="inside">
            <div class="wp_new_stars">
                <t t-set="rating_stat" t-value="rating_product" />
					<t t-call="rating.rating_star_card">
					<t t-set="rating_default_value" t-value="'%.2f' % (rating_stat[product.id].get('avg', 0.0),)" />
					<t t-set="rating_disabled" t-value="True" />
				</t>
            </div>
        </xpath>
    </template>

    <!-- stars insert product page -->
    <template id="star_rating_product_page_insert" inherit_id="clarico_product.clarico_product_product">
        <xpath expr="//div[@class='product_name_rating']" position="after">
            <div class="wp_stars_product_page">
                <t t-set="rating_stat" t-value="rating_product" />
					<t t-call="rating.rating_star_card">
					<t t-set="rating_disabled" t-value="True" />
				</t>
            </div>
        </xpath>
    </template>

    <!-- mini image of product replace -->
    <template id="product_mini_image_replace" inherit_id="clarico_shop.clarico_shop_products_item">
        <xpath expr="//div[@class='product-image oe_product_image']" position="replace">
            <div class="product-image oe_product_image">
                <a itemprop="url"
                    t-att-href="keep('/shop/product/%s' % slug(product), page=(pager['page']['num'] if pager['page']['num']&gt;1 else None))">
                    <span itemprop="image" t-field="product.image"
                        t-options="{'widget': 'image', 'resize':'250x250'}" t-att-alt="product.name" />
                </a>
            <div id="in-wishlist-shop"/>
            </div>
        </xpath>
    </template>

    <!-- product pager -->
    <template id="replace_pager_template" inherit_id="website.pager">
        <xpath expr="//ul" position="replace">
            <ul t-if="pager['page_count'] > 1" t-attf-class="#{ classname or '' } pagination" t-att-style="style or None">
                <li t-att-class=" 'disabled' if pager['page']['num'] == 1 else None ">
                    <a t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else None">◀</a>
                </li>
                <t t-foreach="pager['pages']" t-as="page">
                    <li t-att-class=" 'active' if page['num'] == pager['page']['num'] else None ">
                        <a t-att-href="page['url']" t-raw="page['num']"/>
                    </li>
                </t>
                <li t-att-class=" 'disabled' if pager['page']['num'] == pager['page_count'] else None ">
                    <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None">▶</a>
                </li>
            </ul>
        </xpath>
    </template>

    <!-- add to cart button in compact view-->
    <template id="product_add_to_cart_replace" inherit_id="clarico_shop.clarico_shop_products_item" active="True">
        <xpath expr="//div[@id='add_to_cart_shop']" position="inside">
            <input name="product_id" t-att-value="product.product_variant_id.id" type="hidden" />
            <t t-if="len(product.product_variant_ids) == 1">
                <a class="a-submit customize-add-cart">
                    <span class="fa fa-shopping-cart" />
                   <!--  <span class="list-view-text">Add To Cart</span> -->
                </a>
            </t>
            <t t-if="len(product.product_variant_ids) &gt; 1">
                <a class="customize-add-cart" t-att-href="keep('/shop/product/%s' % slug(product), page=(pager['page']['num'] if pager['page']['num']&gt;1 else None))">
                    <span class="fa fa-shopping-cart" />
                   <!--  <span class="list-view-text">Add To Cart</span> -->
                </a>
            </t>
        </xpath>
    </template>

    <!-- UPD breadcrumb bar -->
