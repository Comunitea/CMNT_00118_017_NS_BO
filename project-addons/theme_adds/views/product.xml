    <!-- add ref.field in product compact view -->
    <template id="add_ref_field_product_list" inherit_id="clarico_shop.clarico_shop_products_item">
        <xpath expr="//div[@class='details']" position="after">
            <div class="detail-sku">SKU:
                <span t-field="product.default_code" t-if="product.default_code" />
                <span t-if="not product.default_code">---</span>
            </div>
        </xpath>
