<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="product_block_replace" inherit_id="clarico_product.clarico_product_product">
        <xpath expr="//div[@class='p_static_desc_para']" position="replace">
            <div class="p_static_desc_para">
<!--                <ul>
                    <li>25 años de experiencia</li>
                    <li>Envio gratis a partir de 99€</li>
                    <li>Mejor calidad a buen precio</li>
                    <li>Pago 100% Seguro</li>
                </ul>-->
                <div class="wld-cont-logos">
                    <div class="wld-logo">
                        <p><img src="/theme_adds/static/img/experience.png" alt="25 años de experiencia"/>
                            <span>25 años de<br/>experiencia</span></p>
                    </div>
                    <div class="wld-logo">
                        <p><img src="/theme_adds/static/img/freeshipping.png" alt="Envio gratis a partir de 99€"/>
                            <span>A partir<br/>de 99€</span></p>
                    </div>
                    <div class="wld-logo">
                        <p><img src="/theme_adds/static/img/bestprices.png" alt="Mejor calidad a buen precio"/>
                            <span >Mejor calidad<br/>a buen precio</span></p>
                    </div>
                    <div class="wld-logo">
                        <p><img src="/theme_adds/static/img/securepayment.png" alt="Pago 100% Seguro"/>
                            <span>Pago 100%<br/>Seguro</span></p>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//p[@class='text-muted res_pera_description']//.." position="replace"/>
        <xpath expr="//input[@name='product_id']//.." position="replace"/>
        <xpath expr="//div[@class='4_btns_combo']" position="after">
            <t t-placeholder="select">
                <input type="hidden" class="product_id" name="product_id"
                    t-att-value="product.product_variant_id.id if len(product.product_variant_ids) == 1 else '0'" />
                <t t-call="website_sale.variants">
                    <t t-set="ul_class" t-value="'nav-stacked'" />
                </t>
            </t>
            <div class="prod_des" t-if="product.description_sale">
                <p t-field="product.description_sale" class="text-muted res_pera_description" />
            </div>
        </xpath>
        <xpath expr="//h4[@class='css_non_editable_mode_hidden decimal_precision']" position="after">
            <div t-if="product.list_price" class="price_sin_iva">
                <span t-field="product.list_price"
                      t-options='{"widget": "monetary", "display_currency": product.currency_id,}'/> sin IVA
            </div>
        </xpath>
        <xpath expr="//div[@class='ctg_class']" position="replace"/>
    </template>


    <!-- modulo de comparación -->

    <template id="compare_product_in_category_page_replace" inherit_id="clarico_compare.clarico_compare_category_shop">
        <xpath expr="//div[@class='comparelist']/.." position="replace"/>
    </template>

    <template id="compare_product_in_category_page_replace_border" inherit_id="clarico_shop.clarico_shop_products_item">
        <xpath expr="//div[@class='hover-cnt']/hr[@class='product-hover-hr'][1]" position="replace"/>
    </template>

    <template id="compare_product_quick_view_replace" inherit_id="clarico_quick_view_compare.clarico_quick_view_compare_category_Quickview">
        <xpath expr="//div[@class='comparelist']" position="replace"/>
    </template>

    <template id="compare_product_product_page_replace" inherit_id="clarico_compare.clarico_compare_category_product">
        <xpath expr="//div[@class='comparelist']" position="replace"/>
    </template>

    <!-- modulo de quick view -->

    <template id="quick_view_category_page_replace" inherit_id="clarico_quick_view.product_quick_view_products_item">
        <xpath expr="//a[@class='quick-view-a']/.." position="replace"/>
    </template>

    <template id="compare_product_in_category_page_replace_border_2" inherit_id="clarico_shop.clarico_shop_products_item">
        <xpath expr="//div[@class='hover-cnt']/hr[@class='product-hover-hr'][1]" position="replace"/>
    </template>

    <template id="replace_shop_pager" inherit_id="clarico_shop.clarico_shop_products">
        <xpath expr="//div[@id='shop_pager']" position="replace">
            <div class="products_pager" id="shop_pager">
                <div class="row">
                    <t t-call="website.pager" />
                </div>
            </div>
        </xpath>
    </template>

    <template id="replace_pager_template" inherit_id="website.pager">
        <xpath expr="//ul" position="replace">
            <ul t-if="pager['page_count'] > 1" t-attf-class="#{ classname or '' } pagination" t-att-style="style or None">
                <li t-att-class=" 'disabled' if pager['page']['num'] == 1 else None ">
                    <a t-att-href=" pager['page_previous']['url'] if pager['page']['num'] != 1 else None">◀</a>
                </li>
                <t t-foreach="pager['pages']" t-as="page">
                    <li t-att-class=" 'active' if page['num'] == pager['page']['num'] else None ">
                        <a t-att-href="page['url']" t-raw="page['num']"/>
                    </li>
                </t>
                <li t-att-class=" 'disabled' if pager['page']['num'] == pager['page_count'] else None ">
                    <a t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None">▶</a>
                </li>
            </ul>
        </xpath>
    </template>

</odoo>