    <!-- Add field to change website sequence for products in treeView  -->
    <record id="website_sequence_product" model="ir.ui.view">
        <field name="name">website.sequence.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="sequence" position="before">
                <field name="website_sequence" widget="handle"/>
                <field name="website_sequence"/>
            </field>
        </field>
    </record>

    <!-- Add field to change website sequence for products in treeView  -->
    <record id="website_category_product" model="ir.ui.view">
        <field name="name">website.category.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="sequence" position="before">
                <field name="public_categ_ids" widget="handle"/>
                <field name="public_categ_ids"/>
            </field>
        </field>
    </record>

